---
import BaseLayout from '../layouts/BaseLayout.astro';
import commonHeroPhoto from '../assets/images/photos/common_404.jpg';
---

<BaseLayout title="Page Not Found">
  <div data-elid="error_section" data-elid-type="section" style="display:none"></div>
  <section class="relative flex min-h-[60vh] items-center justify-center overflow-hidden bg-background">
    <div class="absolute inset-0">
      <img
        src={commonHeroPhoto.src}
        alt=""
        class="h-full w-full object-cover opacity-20"
        aria-hidden="true"
      />
    </div>
    <div class="relative z-10 mx-auto max-w-xl px-6 py-24 text-center">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-primary">404</p>
      <h1 class="mt-4 font-heading text-4xl font-bold text-text md:text-5xl">Page not found</h1>
      <p class="mt-4 text-lg text-text-secondary">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <a class="btn btn-primary" href="/">Back to home</a>
        <a class="btn btn-outline" href="/contact">Contact us</a>
      </div>
    </div>
  </section>
</BaseLayout>
