---
import type { CollectionEntry } from 'astro:content';
import { resolveImage } from '../../lib/resolve-image';


export interface Props {
  team: CollectionEntry<'team'>[];
  eyebrow?: string;
  heading?: string;
  subheading?: string;
  cta?: { label: string; href: string };
  limit?: number;
}

const {
  team,
  eyebrow = 'Our Team',
  heading = 'Meet Our Experts',
  subheading = 'The skilled team behind every great haircut',
  cta,
  limit = 4
} = Astro.props as Props;

const displayTeam = limit ? team.slice(0, limit) : team;
---

<section class="relative overflow-hidden bg-background py-24">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl space-y-6 text-center">
      {eyebrow && <p class="text-xs font-semibold uppercase tracking-[0.45em] text-accent">{eyebrow}</p>}
      <h2 class="font-heading text-3xl font-bold tracking-tight text-text md:text-4xl lg:text-5xl">
        {heading}
      </h2>
      {subheading && <p class="text-lg font-medium text-text-secondary">{subheading}</p>}
    </div>

    <div class="mt-16 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
      {displayTeam.map((member) => {
        const imageSrc = resolveImage(member.data.image?.src);

        return (
          <article class="group relative flex flex-col overflow-hidden rounded-3xl border-2 border-border bg-surface shadow-lg transition-all duration-500 ease-out hover:scale-[1.06] hover:border-primary/70 hover:shadow-2xl hover:shadow-primary/30">
            {imageSrc && (
              <div class="relative aspect-square overflow-hidden">
                <img
                  class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-110"
                  src={imageSrc}
                  alt={member.data.image?.alt || member.data.name}
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-background/80 via-background/30 to-transparent opacity-90 transition-opacity duration-300 group-hover:opacity-70" />
              </div>
            )}

            <div class={`flex flex-col gap-4 p-6 ${!imageSrc ? 'flex-1' : ''}`}>
              <div>
                <h3 class="text-xl font-semibold text-text transition-colors duration-500 group-hover:text-primary">
                  {member.data.name}
                </h3>
                <p class="mt-1 text-sm font-medium uppercase tracking-[0.3em] text-text-secondary transition-colors duration-500 group-hover:text-primary">
                  {member.data.role}
                </p>
              </div>

              {member.data.specialty && (
                <div class="flex items-center gap-2 text-sm text-text-secondary transition-colors duration-500 group-hover:text-primary">
                  <svg
                    class="h-4 w-4 shrink-0 text-primary transition-transform duration-500 group-hover:scale-125"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="font-medium">{member.data.specialty}</span>
                </div>
              )}

              <p class="text-sm leading-relaxed text-text-secondary transition-colors duration-500 group-hover:text-primary line-clamp-3">{member.data.bio}</p>

              {member.data.socials && member.data.socials.length > 0 && (
                <div class="mt-2 flex gap-3">
                  {member.data.socials.map((social) => {
                    const getSocialIcon = (label: string) => {
                      switch (label.toLowerCase()) {
                        case 'instagram':
                          return (
                            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" />
                          );
                        case 'tiktok':
                          return (
                            <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z" />
                          );
                        case 'linkedin':
                          return (
                            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                          );
                        case 'youtube':
                          return (
                            <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                          );
                        case 'facebook':
                        default:
                          return (
                            <path d="M12 2C6.477 2 2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.879V14.89h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.989C18.343 21.129 22 16.99 22 12c0-5.523-4.477-10-10-10z" />
                          );
                      }
                    };

                    return (
                      <a
                        href={social.href}
                        class="text-text-muted transition-all duration-500 hover:scale-110 hover:text-primary"
                        aria-label={`${member.data.name} on ${social.label}`}
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                          {getSocialIcon(social.label)}
                        </svg>
                      </a>
                    );
                  })}
                </div>
              )}
            </div>
          </article>
        );
      })}
    </div>

    {cta && (
      <div class="mt-12 text-center">
        <a
          href={cta.href}
          class="btn btn-primary"
        >
          {cta.label}
        </a>
      </div>
    )}
  </div>
</section>
