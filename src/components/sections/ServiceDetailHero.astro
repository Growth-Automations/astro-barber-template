---
import { resolveAsset } from '../../lib/assets';

export interface CallToAction {
  label: string;
  href: string;
}

export interface HeroImage {
  src: string;
  alt?: string;
}

export interface ServiceDetailHeroProps {
  eyebrow?: string;
  title: string;
  summary: string;
  category?: string;
  duration?: string;
  price?: string;
  highlight?: string;
  image?: HeroImage;
  primaryCta: CallToAction;
  secondaryCta?: CallToAction;
}

const props = Astro.props as ServiceDetailHeroProps;
const heroImage = props.image ? resolveAsset(props.image.src) : undefined;
---

<section class="relative overflow-hidden bg-background text-text-primary">
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-background via-surface/95 to-background" />
    <div class="pointer-events-none absolute -top-32 right-16 h-80 w-80 rounded-full border border-white/10 blur-lg" />
    <div class="pointer-events-none absolute -bottom-40 left-10 hidden h-96 w-96 rounded-full border border-white/5 blur-lg md:block" />
  </div>
  <div class="relative mx-auto grid max-w-6xl items-center gap-16 px-4 py-24 sm:px-6 lg:grid-cols-[1.05fr_0.95fr] lg:px-8">
    <div class="space-y-6">
      {props.eyebrow && (
        <p class="text-xs font-semibold uppercase tracking-[0.4em] text-secondary">{props.eyebrow}</p>
      )}
      {props.category && (
        <p class="text-[0.7rem] font-semibold uppercase tracking-[0.35em] text-text-muted">{props.category}</p>
      )}
      <h1 class="text-4xl font-semibold tracking-tight text-white md:text-5xl">
        {props.title}
      </h1>
      <p class="max-w-xl text-lg text-text-secondary md:text-xl">{props.summary}</p>
      {(props.duration || props.price || props.highlight) && (
        <dl class="grid gap-4 rounded-3xl border border-white/10 bg-white/5 p-6 text-sm text-text-secondary sm:grid-cols-2">
          {props.duration && (
            <div>
              <dt class="text-[0.65rem] uppercase tracking-[0.35em] text-text-muted">Duration</dt>
              <dd class="mt-1 text-lg font-semibold text-white">{props.duration}</dd>
            </div>
          )}
          {props.price && (
            <div>
              <dt class="text-[0.65rem] uppercase tracking-[0.35em] text-text-muted">Investment</dt>
              <dd class="mt-1 text-lg font-semibold text-white">{props.price}</dd>
            </div>
          )}
          {props.highlight && (
            <div class="sm:col-span-2 rounded-2xl border border-secondary/30 bg-secondary/10 px-4 py-3 text-sm text-text-primary">
              {props.highlight}
            </div>
          )}
        </dl>
      )}
      <div class="flex flex-col gap-3 sm:flex-row">
        <a class="btn btn-primary shadow-lg shadow-primary/40" href={props.primaryCta.href}>
          {props.primaryCta.label}
        </a>
        {props.secondaryCta && (
          <a class="btn border border-white/30 bg-transparent text-white hover:bg-white/10" href={props.secondaryCta.href}>
            {props.secondaryCta.label}
          </a>
        )}
      </div>
    </div>
    {heroImage && (
      <div class="relative overflow-hidden rounded-[32px] border border-white/10 bg-background shadow-2xl">
        <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-black/10" />
        <img class="h-full w-full object-cover" src={heroImage} alt={props.image?.alt ?? ''} loading="lazy" />
        <div class="pointer-events-none absolute inset-x-10 bottom-10 rounded-2xl border border-white/10 bg-black/40 px-5 py-4 text-sm text-text-primary backdrop-blur">
          <p class="font-semibold uppercase tracking-[0.3em] text-secondary">Now Reserving</p>
          <p class="mt-2 text-text-secondary">
            {props.duration && props.price ? `${props.duration} â€¢ ${props.price}` : props.summary}
          </p>
        </div>
      </div>
    )}
  </div>
</section>
