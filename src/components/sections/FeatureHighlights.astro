---

import lifestylePhoto2 from '../../assets/images/photos/barber_lifestyle_2.jpg';
import consultationClientPhoto from '../../assets/images/photos/barber_consultation_client.jpg';
import membershipVipPhoto from '../../assets/images/photos/barber_membership_vip.jpg';
import onlocationEventPhoto from '../../assets/images/photos/barber_onlocation_event.jpg';

export interface Highlight {
  eyebrow?: string;
  title: string;
  description: string;
  icon?: string;
}

export interface Props {
  eyebrow?: string;
  heading: string;
  description?: string;
  backgroundWord?: string;
  highlights: Highlight[];
}

const props = Astro.props as Props;
const backgroundWord = props.backgroundWord ?? 'FEATURES';

// Icon map for modern, clear line icons
const iconMap: Record<string, string> = {
  // Speech bubble icon for Consultations
  'consultation': 'M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z',
  // Calendar icon alternative for Consultations
  'calendar': 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z',
  // Badge/star icon for Membership
  'membership': 'M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z',
  // Star icon alternative for Membership
  'star': 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
  // Location pin icon for On-location
  'concierge': 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  'location': 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z M15 11a3 3 0 11-6 0 3 3 0 016 0z',
  'scissors': 'M14.121 14.121L19 19m-7-7l7-7m-7 7l-2.879 2.879M12 12L9.121 9.121m0 5.758a3 3 0 10-4.243 4.243 3 3 0 004.243-4.243zm0-5.758a3 3 0 10-4.243-4.243 3 3 0 004.243 4.243z',
  'clock': 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  'check': 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  'heart': 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  'users': 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z'
};

function getIconPath(iconKey?: string): string {
  if (!iconKey) return iconMap['star'];
  return iconMap[iconKey.toLowerCase()] || iconMap['star'];
}

// Background image map for each card type
const defaultCardImage = lifestylePhoto2.src;
const cardImageMap: Record<string, string> = {
  'consultation': consultationClientPhoto.src,
  'membership': membershipVipPhoto.src,
  'concierge': onlocationEventPhoto.src,
  'location': onlocationEventPhoto.src,
};

function getCardImage(iconKey?: string): string {
  if (!iconKey) return defaultCardImage;
  return cardImageMap[iconKey.toLowerCase()] || defaultCardImage;
}
---

<section class="relative overflow-hidden bg-surface-alt py-32">
  <!-- Background text watermark -->
  <div class="pointer-events-none absolute left-1/2 top-1/4 -translate-x-1/2 text-[16vw] font-semibold uppercase tracking-[0.3em] text-text/5 dark:text-white/5 md:text-[12rem]">
    {backgroundWord}
  </div>

  <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mx-auto max-w-3xl text-center">
      {props.eyebrow && (
        <p class="text-xs font-semibold uppercase tracking-[0.45em] text-secondary">
          {props.eyebrow}
        </p>
      )}
      <h2 class="mt-6 font-heading text-4xl font-bold tracking-tight text-text md:text-5xl">
        {props.heading}
      </h2>
      {props.description && (
        <p class="mt-6 text-lg leading-relaxed text-text-secondary">
          {props.description}
        </p>
      )}
    </div>

    <!-- Feature Cards - Three Distinct, Evenly Spaced Cards -->
    <div class="mt-24 grid gap-10 md:grid-cols-3 md:gap-8 lg:gap-10">
      {props.highlights.map((item) => (
        <article class="feature-card group relative flex min-h-[480px] flex-col items-center justify-center overflow-hidden rounded-[2rem] border-2 border-border bg-surface px-10 py-14 text-center shadow-lg transition-all duration-500 ease-out hover:scale-[1.06] hover:border-primary/70 hover:shadow-2xl hover:shadow-primary/30">
          <!-- Card background image -->
          <div class="absolute inset-0 h-full w-full">
            <img
              class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
              src={getCardImage(item.icon)}
              alt={item.title}
              loading="lazy"
            />
          </div>

          <!-- Semi-transparent overlay for readability -->
          <!-- Light mode: 30% dark overlay, Dark mode: 25% light overlay -->
          <div class="absolute inset-0 bg-gradient-to-b from-background/25 via-surface/30 to-background/35 transition-all duration-300 group-hover:from-background/30 group-hover:via-surface/35 group-hover:to-background/40 dark:from-white/20 dark:via-white/25 dark:to-white/30 dark:group-hover:from-white/25 dark:group-hover:via-white/30 dark:group-hover:to-white/35" />

          <!-- Subtle hover glow -->
          <div class="absolute inset-0 opacity-0 transition-opacity duration-500 group-hover:opacity-100">
            <div class="absolute left-1/2 top-0 h-40 w-40 -translate-x-1/2 -translate-y-20 rounded-full bg-primary/20 blur-3xl" />
            <div class="absolute bottom-0 left-1/2 h-40 w-40 -translate-x-1/2 translate-y-20 rounded-full bg-primary/20 blur-3xl" />
          </div>

          <div class="relative flex flex-col items-center justify-center space-y-6">
            <!-- Gold Line Icon -->
            <svg
              class="h-16 w-16 stroke-primary drop-shadow-[0_4px_12px_rgba(217,165,93,0.4)] transition-all duration-300 group-hover:scale-110 group-hover:rotate-3 group-hover:drop-shadow-[0_6px_16px_rgba(217,165,93,0.6)]"
              fill="none"
              stroke-width="2.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path d={getIconPath(item.icon)} />
            </svg>

            <!-- Heading -->
            <h3 class="font-heading text-2xl font-bold leading-tight tracking-tight text-white drop-shadow-xl transition-all duration-300 group-hover:scale-105 group-hover:text-primary">
              {item.title}
            </h3>

            <!-- Description -->
            <p class="mx-auto max-w-sm text-base leading-relaxed text-white/95 drop-shadow-lg dark:text-white/90">
              {item.description}
            </p>

            <!-- Decorative Gold Accent Line -->
            <div class="mt-2 h-1 w-16 rounded-full bg-gradient-to-r from-primary via-primary to-secondary shadow-lg shadow-primary/40 transition-all duration-300 group-hover:w-24 group-hover:shadow-primary/60" />
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  /* Premium shadow effects for light mode */
  .feature-card {
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 8px 12px -2px rgba(0, 0, 0, 0.08),
      0 0 0 1px rgba(217, 165, 93, 0.08),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.1);
  }

  .feature-card:hover {
    box-shadow:
      0 12px 20px -5px rgba(0, 0, 0, 0.15),
      0 8px 16px -4px rgba(0, 0, 0, 0.1),
      0 0 0 2px rgba(217, 165, 93, 0.2),
      0 0 40px rgba(217, 165, 93, 0.15),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.2);
  }

  /* Enhanced shadows for dark mode */
  .dark .feature-card {
    box-shadow:
      0 6px 10px -2px rgba(0, 0, 0, 0.4),
      0 4px 8px -2px rgba(0, 0, 0, 0.3),
      0 0 0 1px rgba(217, 165, 93, 0.12),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.05);
  }

  .dark .feature-card:hover {
    box-shadow:
      0 20px 30px -8px rgba(0, 0, 0, 0.6),
      0 12px 20px -6px rgba(0, 0, 0, 0.4),
      0 0 0 2px rgba(217, 165, 93, 0.25),
      0 0 50px rgba(217, 165, 93, 0.2),
      inset 0 1px 0 0 rgba(255, 255, 255, 0.08);
  }
</style>
