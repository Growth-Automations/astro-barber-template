---
import type { CollectionEntry } from 'astro:content';


export interface Props {
  tiers: CollectionEntry<'membership-tiers'>[];
  eyebrow?: string;
  heading?: string;
  subheading?: string;
  clubName?: string;
  cta?: { label: string; href: string };
}

const {
  tiers,
  eyebrow = 'Membership',
  heading = 'Join The Qutter Club',
  subheading = 'Exclusive perks for our regular clients',
  clubName = 'The Qutter Club',
  cta
} = Astro.props as Props;

const sortedTiers = [...tiers].sort((a, b) => {
  if (a.data.featured) return -1;
  if (b.data.featured) return 1;
  return 0;
});
---

<section class="relative overflow-hidden bg-surface-alt py-24 sm:py-28 lg:py-32">
  <div class="mx-auto max-w-7xl px-6 sm:px-8 lg:px-10">
    <!-- Header Section with generous spacing -->
    <div class="flex flex-col gap-6 text-center">
      {eyebrow && <p class="text-xs font-bold uppercase tracking-[0.45em] text-secondary">{eyebrow}</p>}
      <div class="mx-auto max-w-3xl">
        <h2 class="font-heading text-4xl font-bold tracking-tight text-text md:text-5xl lg:text-6xl">
          {heading}
        </h2>
        {subheading && <p class="mt-5 text-xl font-semibold text-text leading-relaxed">{subheading}</p>}
      </div>
    </div>

    <!-- Membership Tiers Grid with generous spacing -->
    <div class="mt-20 grid gap-10 md:grid-cols-3">
      {sortedTiers.map((tier) => {
        return (
          <article
            class="group relative flex flex-col overflow-hidden rounded-3xl border-2 border-border bg-surface p-10 shadow-lg transition-all duration-500 ease-out hover:scale-[1.06] hover:border-primary/70 hover:shadow-2xl hover:shadow-primary/30"
          >
            {tier.data.badge && (
              <div class="absolute -right-12 -top-12 h-32 w-32 rotate-12 rounded-full bg-primary/15 blur-2xl" />
            )}

            <div class="relative">
              {tier.data.badge && (
                <span class="mb-5 inline-flex rounded-full border border-primary/50 bg-primary/20 px-4 py-1.5 text-xs font-bold uppercase tracking-[0.3em] text-primary">
                  {tier.data.badge}
                </span>
              )}

              <div class="mb-5 flex items-center gap-4">
                {tier.data.icon && (
                  <span class="text-4xl" aria-hidden="true">
                    {tier.data.icon}
                  </span>
                )}
                <h3 class="text-2xl font-bold text-text transition-colors duration-500 group-hover:text-primary">
                  {tier.data.name}
                </h3>
              </div>

              {tier.data.price && (
                <div class="mb-5">
                  <span class="text-4xl font-bold text-text transition-colors duration-500 group-hover:text-primary">{tier.data.price}</span>
                </div>
              )}

              <p class="mb-8 text-base font-semibold text-text transition-colors duration-500 group-hover:text-primary leading-relaxed">{tier.data.description}</p>

              <div class="mb-8 h-px bg-gradient-to-r from-transparent via-border to-transparent" />

              <ul class="space-y-4">
                {tier.data.benefits.map((benefit) => (
                  <li class="flex items-start gap-3 text-sm font-semibold text-text transition-colors duration-500 group-hover:text-primary">
                    <svg
                      class="mt-0.5 h-5 w-5 flex-shrink-0 text-primary transition-transform duration-500 group-hover:scale-125"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2.5"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span>{benefit}</span>
                  </li>
                ))}
              </ul>

              <div class="mt-10">
                <a
                  href="/appointment"
                  class="btn btn-primary w-full font-bold"
                >
                  Join Now
                </a>
              </div>
            </div>
          </article>
        );
      })}
    </div>

    {cta && (
      <div class="mt-16 text-center">
        <a
          href={cta.href}
          class="inline-flex items-center gap-3 text-sm font-bold uppercase tracking-[0.35em] text-primary transition-all hover:text-primary-dark hover:gap-4"
        >
          {cta.label} â†’
        </a>
      </div>
    )}
  </div>
</section>
