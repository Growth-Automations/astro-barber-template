---
import type { CollectionEntry } from 'astro:content';
import { resolveImage } from '../../lib/resolve-image';


export interface Props {
  styles: CollectionEntry<'featured-styles'>[];
  eyebrow?: string;
  heading?: string;
  subheading?: string;
  cta?: { label: string; href: string };
}

const {
  styles,
  eyebrow = 'Featured Styles',
  heading = "This Month's Top Styles",
  subheading = 'Explore the latest trends crafted by our expert barbers',
  cta
} = Astro.props as Props;
---

<section class="relative overflow-hidden bg-background py-24 text-text">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col gap-8 text-center">
      {eyebrow && <p class="text-xs font-bold uppercase tracking-[0.5em] text-secondary">{eyebrow}</p>}
      <div class="mx-auto max-w-4xl space-y-6">
        <h2 class="font-heading text-5xl font-extrabold leading-tight tracking-tight text-text drop-shadow-md transition-colors duration-300 md:text-6xl md:leading-tight md:tracking-[-0.01em]">
          {heading}
        </h2>
        {subheading && <p class="mt-6 text-xl font-semibold leading-relaxed text-text-secondary">{subheading}</p>}
      </div>
    </div>

    <div class="mt-16 grid gap-8 md:grid-cols-3">
      {styles.map((style) => {
        const imageSrc = resolveImage(style.data.image.src);
        const bookingLink = style.data.bookingLink || '/appointment';

        return (
          <article class="group relative overflow-hidden rounded-3xl border-2 border-border bg-surface shadow-lg transition-all duration-500 ease-out hover:scale-[1.06] hover:border-primary/70 hover:shadow-2xl hover:shadow-primary/30">
            <div class="relative aspect-[4/5] overflow-hidden">
              <img
                class="h-full w-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
                src={imageSrc}
                alt={style.data.image.alt}
                loading="lazy"
              />
              <!-- Enhanced contrast overlay for better text readability -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/35 to-transparent transition-opacity duration-300 group-hover:from-black/85 group-hover:via-black/40" />
              {style.data.category && (
                <span class="absolute right-4 top-4 rounded-full border border-primary/60 bg-black/50 px-4 py-2 text-xs font-bold uppercase tracking-[0.3em] text-white backdrop-blur-md dark:border-primary/80 dark:bg-black/60">
                  {style.data.category}
                </span>
              )}
              <div class="absolute bottom-0 left-0 right-0 p-8">
                <h3 class="font-heading text-2xl font-bold text-white drop-shadow-xl transition-colors duration-300 group-hover:text-primary">
                  {style.data.name}
                </h3>
                <p class="mt-3 text-sm leading-relaxed text-white/95 drop-shadow-lg">{style.data.description}</p>
                <a
                  href={bookingLink}
                  class="mt-5 inline-flex items-center gap-2 text-sm font-bold uppercase tracking-[0.3em] text-primary drop-shadow-md transition-all duration-300 hover:gap-3 hover:text-primary"
                >
                  Book This Style â†’
                </a>
              </div>
            </div>
          </article>
        );
      })}
    </div>

    {cta && (
      <div class="mt-12 text-center">
        <a
          href={cta.href}
          class="btn btn-primary"
        >
          {cta.label}
        </a>
      </div>
    )}
  </div>
</section>
